{% comment %}
Copyright (C) 2022 Katsute <https://github.com/Katsute>
{% endcomment %}
<header class="@nav bg-white py-3">
    <div class="container-lg">
        <div class="flex-wrap justify-content-lg-start
            flex-center-center">
            {% comment %} logo {% endcomment %}
            <div class="flex-align-center me-0 me-lg-2">
                <a href="/" class="text-decoration-none text-body">Katsute</a>
            </div>
            {% comment %} navigation {% endcomment %}
            <ul class="nav me-lg-auto">
                {% for link in site.data.nav.nav-links %}
                    <li>
                        <a href="{{ link.link }}" class="text-body">{{ link.name }}</a>
                    </li>
                {% endfor %}
            </ul>
            {% comment %} links {% endcomment %}
            <ul class="nav ms-md-auto">
                {% include _layout/modal-button.liquid
                    target = "#github-modal"
                    icon = "fab fa-github"
                %}
                {% include _layout/modal-button.liquid
                    target = "#sponsor-modal"
                    icon = "fab fa-patreon"
                %}
                {% include _layout/modal-button.liquid
                    target = "#hiring-modal"
                    icon = "fab fa-linkedin"
                %}
            </ul>
        </div>
    </div>
</header>